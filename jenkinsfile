pipeline {
    agent {
        docker {
            image 'jenkins/jenkins:lts'
        }
    }
    stages {
        stage('Clone repository') {
            steps {
                git 'https://github.com/Amitba314/jenkins_practice.git'
            }
        }
        stage('Build Docker image') {
            steps {
                sh 'docker build -t jenkins_practice_image .'
            }
        }
        stage('Run Docker container') {
            steps {
                sh 'docker run -d --name jenkins_practice_app -p 8080:8080 jenkins_file_image'
            }
        }
        stage('Run tests') {
            steps {
                sh 'docker exec jenkins_practice_app run_tests.sh'
            }
        }
    }
}

